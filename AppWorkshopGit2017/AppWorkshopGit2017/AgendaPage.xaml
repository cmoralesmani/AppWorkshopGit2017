<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppWorkshopGit2017.AgendaPage"
             Title="Agenda">
    <ListView x:Name="ListViewAgenda" ItemSelected="ListViewAgenda_ItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="{Binding Padding}" Orientation="Vertical" VerticalOptions="Center">
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                            <Label Text="{Binding Id}" VerticalOptions="Center"></Label>
                            <Label Text="{Binding Nombre}" VerticalOptions="Center"></Label>
                            <Label Text="{Binding Hora}" VerticalOptions="Center"></Label>
                        </StackLayout>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>